{
  "name": "fastify-starter",
  "version": "1.0.0",
  "description": "Fastify starter template with Typescript",
  "scripts": {
    "watch": "tsc --watch --preserveWatchOutput --pretty",
    "server": "tsnd --respawn --transpile-only --exit-child src/app.ts",
    "dev": "cross-env NODE_ENV=development nodemon",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js",
    "test": "tap --node-arg=--require=ts-node/register"
  },
  "author": "Muhammad Ramazan <ramzanm461@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "fastify": "^4.17.0",
    "tap": "^16.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.1.4",
    "cross-env": "^7.0.3",
    "fastify-tsconfig": "^1.0.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  }
}